public class SelectionSort {
  public static void main(String[] args) {
        int data[] = {1,11,51,25,2,7};
        selectionShortInt(data);
        
    }
    public static void selectionShortInt (int [] bilangan){
        System.out.print("\nPengurutan Selection Sort");
        System.out.println("\n == sebelum shorting ==");
        for (int bil: bilangan){
            System.out.print(bil+" ");
        }
        for ( int i=0; i< bilangan.length; i++){
            System.out.println("\n proses pengurutan="+i);
            int indexArray=i;
            for (int j=i; j<bilangan.length; j++){
                if (bilangan[indexArray]> bilangan [j]){
                    indexArray=j;
                    
                }
            }
            int tanda= bilangan[i];
            bilangan[i]=bilangan[indexArray];
            bilangan[indexArray]=tanda;
            
        }
        System.out.println("\n== setelah shorting ==");
        for (int bil: bilangan){
            System.out.print(bil + " ");
        }
    }
}
